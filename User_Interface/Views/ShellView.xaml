<Window x:Class="User_Interface.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:User_Interface.Views"
        xmlns:cal="http://www.caliburnproject.org"
        mc:Ignorable="d"
        Title="ShellView" Height="500" Width="400" MinHeight="400" MinWidth="500"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style TargetType="TextBox" x:Key="TBStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#cccccc"/>
            <!--<Setter Property="BorderThickness" Value="2"/>-->
            <Setter Property="Padding" Value="4"/>
            <Setter Property="FontFamily" Value="Time New Roman"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Text" Value="Create text box and enter you formula:"/>
            <Setter Property="MinWidth" Value="40"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="MaxHeight" Value="70"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="AcceptsTab" Value="True"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!--Buttons-->
        <!--Grid Column 3-->        
        <Button x:Name="One" Grid.Row="4" Grid.Column="3" Height="25" Width="30" 
                Margin="5">1</Button>
        <Button x:Name="Three" Grid.Row="5" Grid.Column="3" Height="25" Width="30" Margin="5">
            3
        </Button>
        <Button x:Name="Five" Grid.Row="6" Grid.Column="3" Height="25" Width="30" Margin="5">
            5
        </Button>
        <Button x:Name="Seven" Grid.Row="7" Grid.Column="3" Height="25" Width="30" Margin="5">
            7
        </Button>
        <Button x:Name="Nine" Grid.Row="8" Grid.Column="3" Height="25" Width="30" Margin="5">
            9
        </Button>
        <!--Grid Column 4-->
        <Button x:Name="Two" Grid.Row="4" Grid.Column="4" Height="25" Width="30" Margin="5">
            2
        </Button>
        <Button x:Name="Four" Grid.Row="5" Grid.Column="4" Height="25" Width="30" Margin="5">
            4
        </Button>
        <Button x:Name="Six" Grid.Row="6" Grid.Column="4" Height="25" Width="30" Margin="5">
            6
        </Button>
        <Button x:Name="Eight" Grid.Row="7" Grid.Column="4" Height="25" Width="30" Margin="5">
            8
        </Button>
        <Button x:Name="Zero" Grid.Row="8" Grid.Column="4" Height="25" Width="30" Margin="5">
            0
        </Button>
        
        <Button x:Name="Plus" Grid.Row="9" Grid.Column="3" Height="25" Width="30" Margin="5">
            +
        </Button>
        <Button x:Name="Minus" Grid.Row="9" Grid.Column="4" Height="25" Width="30" Margin="5">
            -
        </Button>
        <Button x:Name="Multiplication" Grid.Row="10" Grid.Column="3" Height="25" Width="30" Margin="5">
            *
        </Button>
        <Button x:Name="Division" Grid.Row="10" Grid.Column="4" Height="25" Width="30" Margin="5">
            /
        </Button>
        <Button x:Name="OpenBrackets" Grid.Row="11" Grid.Column="3" Height="25" Width="30" Margin="5">
            (
        </Button>
        <Button x:Name="CloseBrackets" Grid.Row="11" Grid.Column="4" Height="25" Width="30" Margin="5">
            )
        </Button>
        <!--Grid column 2-->
        <Button x:Name="Clear_All" Grid.Row="13" Grid.Column="2" MaxHeight="25"
                Width="75" Height="25">Clear All</Button>
        <Button x:Name="Text" Grid.Row="3" Grid.Column="2" Height="25" Width="75" >
            Text
        </Button>
        <!--Grid column 3-4-->
        <Button x:Name="Root" Grid.Row="3" Grid.Column="3" Height="25" Width="80" 
                Margin="5" Grid.ColumnSpan="2">Root</Button>
        <Button x:Name="Сalculation" Grid.Row="12" Grid.Column="3" Grid.ColumnSpan="2"
        Width="75" Height="40">
            <TextBlock TextAlignment="Center">
                <Run Text="Calculation"/>
                <LineBreak/>
                <Run Text="or press ';'"/>
            </TextBlock>
        </Button>

        <Button x:Name="CreateTextBox" Grid.Row="13" Grid.Column="3" Grid.ColumnSpan="2"
        Width="75" Height="25">Create Box</Button>
        <!--Grid column 5-->
        <Button x:Name="Square" Grid.Row="3" Grid.Column="5" Height="25" Width="80" 
                Margin="5" Grid.ColumnSpan="1">Square</Button>
        
        <Button x:Name="CreateTextBoxPairs" Grid.Row="4" Grid.Column="6" Grid.ColumnSpan="2"
        Width="75" Height="25" Margin="0,5,0,0">Create Pairs</Button>

        <!--Buttons-->
        <!-- Grid column 5-->

        <Border BorderBrush="#cccccc" BorderThickness="2" Grid.Row="4" 
                Grid.Column="2" Grid.RowSpan="9" Margin="0,5,0,5">
            <TextBlock x:Name="ListPairs" MinWidth="100" FontSize="18">
            <ItemsControl>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            </TextBlock>            
        </Border>

        <TextBlock x:Name="TitlePairs" Grid.Row="4" Grid.Column="5" Grid.ColumnSpan="2"
                   Text="Enter initial pairs:" HorizontalAlignment="Center" FontSize="14"
                   Margin="10,10,0,0"/>


        <Grid Grid.Row="5" Grid.Column="5" Grid.ColumnSpan="3" Grid.RowSpan="2" Margin="10,5,0,0">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <WrapPanel Orientation="Horizontal" Width="Auto">
                    <ItemsControl ItemsSource="{Binding PairsBoxes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" Width="Auto"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBox x:Name="BoxPairs" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </WrapPanel>
            </ScrollViewer>
        </Grid>


        <Grid Grid.Row="7" Grid.Column="5" Grid.ColumnSpan="3" Grid.RowSpan="7" 
              Margin="10,5,0,0" >
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="formulaSize">
                    <TextBlock x:Name="TitleBox" Text="Create text box and enter you formula:" HorizontalAlignment="Center" FontSize="14"/>
                    <ItemsControl  ItemsSource="{Binding TextBoxes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBox x:Name="Box" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
